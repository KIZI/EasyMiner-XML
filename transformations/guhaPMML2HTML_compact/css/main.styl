@import 'flexbox'
@import 'config'

/*region mixins*/
basicTableWithBorders()
  background tableBgColor
  color tableColor
  border-spacing 0
  margin 20px 0
  tr:first-child th
    border-top 1px solid tableHeadBgColor
  th
    padding tableTdPadding
    background tableHeadBgColor
    color tableHeadColor
    text-align left
    border 1px solid tableHeadBgColor
    border-left  none
    border-top none
    &:first-child
      border 1px solid tableHeadBgColor
    &.empty
      background tableBgColor
      &:first-child
        border-left none
        border-top  none
  td
    padding tableTdPadding
    text-align left
    border-bottom 1px solid tableTdBorderColor
    border-right  1px solid tableTdBorderColor
    border-top none
    &:first-child
      border-left 1px solid tableTdBorderColor

listTable()
  basicTableWithBorders()
  tr:nth-child(even)
    background tableBgColor2

graphTable()
  listTable()
  td.name
    font-weight bold
  td.frequency
    text-align right

infoTable()
  background tableBgColor
  border-spacing 0
  margin 20px 0
  th, td
    padding tableTdPadding
    background tableBgColor
    color tableColor
    text-align left
    border none
    font-weight normal
  td
    font-weight bold

percentsGradient(position, startColor, endColor, baseBgColor)
  background baseBgColor !important
  background rgba(endColor,(position/100)) !important
  position=position+"%"
  //background -moz-linear-gradient(left, startColor 0%, endColor position, baseBgColor position, baseBgColor 100%) !important /* FF3.6+ */
  //background -webkit-gradient(linear, left top, right top, color-stop(0%,startColor), color-stop(position,endColor), color-stop(position,baseBgColor), color-stop(100%,baseBgColor)) !important /* Chrome,Safari4+ */
  //background -webkit-linear-gradient(left, startColor 0%,endColor position,baseBgColor position,baseBgColor 100%) !important /* Chrome10+,Safari5.1+ */
  //background -o-linear-gradient(left,  startColor 0%,endColor position,baseBgColor position,baseBgColor 100%) !important /* Opera 11.10+ */
  //background -ms-linear-gradient(left, startColor 0%,endColor position,baseBgColor position,baseBgColor 100%) !important /* IE10+ */
  background linear-gradient(to right, startColor 0%,endColor position,baseBgColor position,baseBgColor 100%) !important  /* W3C */

for j in (0..100)
  td.bg{j}p
    percentsGradient(j, tableGraphColorLeft, tableGraphColorRight, transparent)


collapsableSubsection()
  padding 20px 20px 10px 40px
  margin 2px 5px
  border 1px solid subSectionBorderColor
  position relative
  h3
    margin 0
    margin-left -25px
    padding 0 0 0 25px
    background url('arrow-down.png') left 3px no-repeat
    &.clickable
      cursor pointer
    span.counter
      float right
      color detailsTextColor
      font-style italic
      font-weight normal

  .simpleDetails
    color detailsTextColor
    padding 5px 10px
    display none
    a
      color detailsTextColor
      text-decoration none
      &:hover
        text-decoration underline

  &.collapsed
    border 1px solid baseBgColor
    padding-top 5px
    padding-bottom 0
    &:hover
      border 1px solid subSectionBorderColor
    h3
      background url('arrow-right.png') left 3px no-repeat
    .details
      display none
    .simpleDetails
      display block

sectionMultiCollapsers()
  margin 5px
  margin-bottom 15px
  padding 0
  font-size 80%
  a
    color detailsTextColor
    display inline-block
    padding 0 5px
    border-left 1px solid detailsTextColor
    text-decoration none
    &:first-child
      border-left none
    &:hover
      text-decoration underline

sectionDetailsBlock()
  min-width 300px
  padding 20px 20px 20px 0
  h4
    margin 0
    padding 0

/*endregion*/

p.error
  color errorTextColor

header
  table.metadata
    infoTable()

section#sect2
section#sect3
  .attributesCount
    font-weight bold

  .multiCollapsers
    sectionMultiCollapsers()

  section.list
    display none
    table
      listTable()

section#sect2 section.dataField
section#sect3 section.attribute
    collapsableSubsection()
    &.collapsed
      table.fieldBasicInfo
        display none

    table.fieldBasicInfo
      infoTable()

    .details
      flexbox(flex)
      flex-direction(row)
      flex-align(flex-start)
      flex-justify(stretch)
      flex-wrap(wrap)

      table.graphTable
        graphTable()
        width 40%

      canvas
        margin 20px
        width 55%
        height 400px

section#sect4
  #sect4-imValues
    collapsableSubsection()
    table
      listTable()
      width 100%
      td.name
        font-weight bold
    &.collapsed
      padding 20px 20px 10px 40px
      border 1px solid subSectionBorderColor
      table, p
        display none

  #sect4-cedents
    collapsableSubsection()
    #sect4-rulesPattern
      font-weight bold
    section.cedentsDetails
      table
        listTable()
        width 100%
        .id
          display none
          &:first-child + th
            border-left 1px solid tableHeadBgColor
          &:first-child + td
            border-left 1px solid tableTdBorderColor
    &.collapsed
      padding 20px 20px 10px 40px
      border 1px solid subSectionBorderColor
      section.cedentsDetails, p
        display none
      p#sect4-rulesPattern
        display block

section#sect5
  .foundRulesCount
    font-weight bold
  .multiCollapsers
    sectionMultiCollapsers()

  section.foundRule
    collapsableSubsection()
    .details
      flexbox(flex)
      flex-direction(row)
      flex-align(baseline)
      flex-justify(start)
      flex-wrap(wrap-rewerse)
      div.imValues, div.fourFtTable
        sectionDetailsBlock()

      table.fourFtTable
        basicTableWithBorders()
        th, td
          text-align right

      table.imValuesTable
        listTable()
        td.value
          text-align right