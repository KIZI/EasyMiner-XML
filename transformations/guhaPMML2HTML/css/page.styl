@import 'config'

*
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 14px
  color textColor

html
  background pageBgColor

body
  width 80%
  padding 20px
  margin 20px auto
  background baseBgColor
  box-shadow bodyBoxShadow
  & > section
    margin 10px 0
    padding 10px 0 20px 0
    border-bottom 1px solid pageBgColor
    &:last-of-type
      border-bottom none

a
  text-decoration linkDecoration
  color linkColor
  &:hover
    text-decoration underline
    color linkHoverColor

h1
  h1()

h2
  h2()
  padding 0
  margin 0 0 23px 0

h3
  h3()
  &.clickable
    cursor pointer
    &:hover
      text-decoration linkHoverDecoration
      color linkHoverColor
